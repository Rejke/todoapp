<header>
  <div class="container">
    <div></div>
    <h1>Задачи</h1>
    <%= link_to(image_tag(image_path("addTodoIcon.png")), "#", id: "showTodo-btn") %>
  </div>
</header>

<main>
  <% @projects.each do |project| %>
    <div class="card">
      <h2><%= project.title %></h2>
      <ul>
        <% project.todos.each do |todo| %>
          <li><input type="checkbox"> <%= todo.text %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div id="newTodo">
    <h2>Новая задача</h2>

    <%= form_for(:todo, url: todo_create_path, html: { id: "newTodo-form" }) do |f| %>
      <%= f.text_field(:text, { placeholder: "Название задачи..." }) %>
      <%= f.select(:project_id, @projects.map { |p| [p.title, p.id] } ) %>
      <br>
      <%= link_to("ОТМЕНА", "#", id: "discard-btn") %>
      <%= link_to("OK", "#", id: "submit-btn") %>
    <% end %>
  </div>
</main>

<script>
    $(document).ready(function(){
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%'
        });
    });
</script>