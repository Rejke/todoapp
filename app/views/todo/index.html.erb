<header>
  <div class="container">
    <h1>Задачи</h1>
    <%= link_to(image_tag(image_path("baseline_add_white_48dp.png")), "#", id: "showTodo-btn") %>
  </div>
</header>

<main>
  <% @projects.each do |project| %>
    <div>
      <h2><%= project.title %></h2>
      <ul>
        <% project.todos.each do |todo| %>
          <li><%= todo.text %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div id="newTodo">
    <h2>Новая задача</h2>

    <%= form_for(:todo, url: todo_create_path, html: { id: "newTodo-form" }) do |f| %>
      <%= f.text_field(:text, { placeholder: "Название задачи..." }) %>
      <%= f.select(:project_id, @projects.map { |p| [p.title, p.id] } ) %>
      <br>
      <%= link_to("ОТМЕНА", "#", id: "discard-btn") %>
      <%= link_to("OK", "#", id: "submit-btn") %>
    <% end %>
  </div>
</main>
